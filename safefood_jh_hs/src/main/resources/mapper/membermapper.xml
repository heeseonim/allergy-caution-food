<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.mapper.MemberMapper">
	<insert id="insertMember" parameterType="member">
		insert into signup values (#{id},#{pw},#{name},#{phone},#{email})
	</insert>
	
	<select id="searchMember" parameterType="string" resultType="member">
		select * from signup where id = #{id}
	</select>
	
	<!-- 나중에 -->
	<select id="LoginMember" parameterType="string" resultType="member">
		select * from signup where id = #{id}
	</select>

	<update id="updateMember" parameterType="member">
		update signup set pw = #{pw}, name = #{name}, phone = #{phone}, email = #{email} where id = #{id}
	</update>

	<delete id="deleteMember" parameterType="string">
		delete from signup where id=#{id}
	</delete>
	
	<select id="searchAll" resultType="member">
		select * from signup
	</select>
</mapper>